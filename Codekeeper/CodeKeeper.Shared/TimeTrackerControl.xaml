<UserControl
    x:Class="Codekeeper.TimeTrackerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Codekeeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Text="CPR Start Time" Margin="1,41,0,0" FontSize="18.667" Height="64" Width="194" FontFamily="Century Gothic" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="0,41,0,0" TextWrapping="Wrap" Text="Current Time" VerticalAlignment="Top" Height="64" Width="200" FontSize="18.667" FontFamily="Century Gothic"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="0,41,0,0" TextWrapping="Wrap" Text="Elapsed Time" VerticalAlignment="Top" Height="64" Width="200" FontSize="18.667" FontFamily="Century Gothic"/>
        <TextBlock x:Name="lblCprTime" HorizontalAlignment="Left" Margin="1,70,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="35" Width="175" FontSize="16"/>

    </Grid>
</UserControl>
